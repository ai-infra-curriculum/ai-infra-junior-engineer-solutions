[flake8]
# Maximum line length
max-line-length = 100

# Maximum cyclomatic complexity
max-complexity = 10

# Ignore specific error codes
ignore =
    # E203: Whitespace before ':' (conflicts with black)
    E203,
    # W503: Line break before binary operator (conflicts with black)
    W503,
    # E501: Line too long (handled by black)
    E501,
    # D100: Missing docstring in public module (optional)
    D100,
    # D104: Missing docstring in public package
    D104

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .tox,
    venv,
    env,
    build,
    dist,
    *.egg-info

# Enable additional checks
select =
    # Pycodestyle errors
    E,
    # Pycodestyle warnings
    W,
    # PyFlakes
    F,
    # Complexity
    C90,
    # Naming conventions
    N,
    # Docstrings
    D,
    # Bugbear
    B

# Per-file ignores
per-file-ignores =
    # Tests don't need docstrings
    test_*.py:D100,D101,D102,D103,D104
    # __init__.py doesn't need docstrings
    __init__.py:D104

# Docstring conventions
docstring-convention = google

# Show source code for each error
show-source = True

# Show statistics
statistics = True

# Count errors
count = True
