# Grafana Configuration

# Admin credentials (CHANGE IN PRODUCTION!)
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=admin

# SMTP settings for email alerts
GF_SMTP_ENABLED=false
GF_SMTP_HOST=smtp.gmail.com:587
GF_SMTP_USER=your-email@company.com
GF_SMTP_PASSWORD=your-smtp-password
GF_SMTP_FROM_ADDRESS=grafana@company.com
GF_SMTP_FROM_NAME=Grafana ML Platform

# Data directories (auto-created by setup script)
GRAFANA_DATA_DIR=./data/grafana
GRAFANA_LOGS_DIR=./data/grafana-logs
PROMETHEUS_DATA_DIR=./data/prometheus
LOKI_DATA_DIR=./data/loki

# External URL (change for production)
GF_SERVER_ROOT_URL=http://localhost:3000
