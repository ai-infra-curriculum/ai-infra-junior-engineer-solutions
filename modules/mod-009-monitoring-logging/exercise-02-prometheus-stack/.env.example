# Prometheus Stack Environment Configuration

# Alertmanager SMTP Configuration
SMTP_PASSWORD=your_smtp_password_here

# Slack Webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty Integration Key
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key_here

# ML Model Exporter Configuration
EXPORTER_PORT=9101
MODEL_API_URL=http://inference-gateway:8000
SCRAPE_INTERVAL=15
LOG_LEVEL=info

# Data persistence directories (auto-created by setup script)
PROMETHEUS_DATA_DIR=./data/prometheus
ALERTMANAGER_DATA_DIR=./data/alertmanager

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=10GB

# Optional: Remote Write Configuration
# REMOTE_WRITE_URL=http://victoriametrics:8428/api/v1/write
# REMOTE_READ_URL=http://victoriametrics:8428/api/v1/read
